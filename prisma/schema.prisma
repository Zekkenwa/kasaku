generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  phone         String?  @unique
  monthlyReportOptIn Boolean @default(false)
  tempPhone     String?
  otpCode       String?
  otpExpiresAt  DateTime?
  deleteRequestedAt  DateTime?
  deleteScheduledAt  DateTime?
  lastEmailChangeAt  DateTime?
  
  // OTP Rate Limiting
  otpLastSentAt      DateTime?
  otpAttempts        Int       @default(0)
  otpBlockedUntil    DateTime?

  createdAt     DateTime @default(now())

  updatedAt     DateTime @updatedAt

  accounts     Account[]
  sessions     Session[]
  categories   Category[]
  transactions Transaction[]
  budgets      Budget[]
  loans        Loan[]
  wallets      Wallet[]
  recurringTransactions RecurringTransaction[]
  goals        Goal[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Category {
  id        String   @id @default(cuid())
  userId    String
  name      String
  type      CategoryType
  createdAt DateTime @default(now())

  user         User          @relation(fields: [userId], references: [id])
  transactions Transaction[]
  budgets      Budget[]
  recurringTransactions RecurringTransaction[]

  @@unique([userId, name, type])
}

model Transaction {
  id         String           @id @default(cuid())
  userId     String
  categoryId String?
  type       TransactionType
  amount     Int
  note       String?
  createdAt  DateTime         @default(now())

  user     User      @relation(fields: [userId], references: [id])
  category Category? @relation(fields: [categoryId], references: [id])
  walletId String?
  wallet   Wallet?   @relation(fields: [walletId], references: [id])

  @@index([userId, createdAt])
}

model Budget {
  id          String       @id @default(cuid())
  userId      String
  categoryId  String
  limitAmount Int
  period      BudgetPeriod @default(MONTHLY)
  startDate   DateTime?
  endDate     DateTime?
  dayOfWeek   Int?
  dayOfMonth  Int?
  monthOfYear Int?
  createdAt   DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

  @@unique([userId, categoryId])
  @@index([userId])
}

model Loan {
  id        String     @id @default(cuid())
  userId    String
  name      String
  amount    Int
  dueDate   DateTime?
  status    LoanStatus @default(ONGOING)
  type      LoanType   @default(PAYABLE)
  createdAt DateTime   @default(now())

  user     User              @relation(fields: [userId], references: [id])
  payments PaymentHistory[]

  @@index([userId])
}

model Wallet {
  id             String     @id @default(cuid())
  userId         String
  name           String
  type           WalletType @default(CASH)
  initialBalance Int        @default(0)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  user         User          @relation(fields: [userId], references: [id])
  transactions Transaction[]
  recurringTransactions RecurringTransaction[]

  @@unique([userId, name])
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum CategoryType {
  INCOME
  EXPENSE
}

enum BudgetPeriod {
  ONCE
  MANUAL
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}

enum LoanStatus {
  ONGOING
  PAID
}

enum WalletType {
  CASH
  BANK
  EWALLET
}

model RecurringTransaction {
  id          String   @id @default(cuid())
  userId      String
  name        String
  amount      Int
  type        TransactionType
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  walletId    String?
  wallet      Wallet?  @relation(fields: [walletId], references: [id])
  note        String?

  frequency   RecurringFrequency
  interval    Int      @default(1)
  startDate   DateTime
  nextRun     DateTime
  lastRun     DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([nextRun])
}

enum RecurringFrequency {
  DAILY
  WEEKLY
  MONTHLY
}

model PaymentHistory {
  id        String   @id @default(cuid())
  loanId    String
  amount    Int
  date      DateTime @default(now())
  note      String?
  
  loan      Loan     @relation(fields: [loanId], references: [id], onDelete: Cascade)

  @@index([loanId])
}

enum LoanType {
  PAYABLE
  RECEIVABLE
}

model Goal {
  id            String   @id @default(cuid())
  userId        String
  name          String
  targetAmount  Int
  currentAmount Int      @default(0)
  deadline      DateTime?
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model WhatsAppAuth {
  id    String @id @default(cuid())
  key   String @unique
  value String @db.Text
}